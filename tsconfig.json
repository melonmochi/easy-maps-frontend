{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "components": [
        "src/components"
      ],
      "src": [
        "src"
      ],
      "typings": [
        "typings"
      ]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}